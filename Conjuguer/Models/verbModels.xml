  <model mo="apeler" id="1-3a" pa="1-1" p="0,1,l,r1s,r2s,r3s,r3p" />
  <model mo="finir" id="2-1" ep="i" er1="is" er2="is" er3="it" er4="issons" er5="issez" er6="issent" ex1="is" ex2="is" ex3="it" ex4="îmes" ex5="îtes" ex6="irent" />
</models>
