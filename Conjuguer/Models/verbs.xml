<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE verbs [
    <!ELEMENT verbs (verb+)>
    <!ELEMENT verb (verb*)>
    <!ATTLIST verb in CDATA #REQUIRED>
    <!ATTLIST verb tn CDATA #REQUIRED>
    <!ATTLIST verb mo CDATA #REQUIRED>
    <!ATTLIST verb ay CDATA #IMPLIED>
]>

<!--in = infinitif (e.g., finir)-->
<!--tn = English translation -->
<!--pa = verb model (e.g., 2-1)-->
<!--ay = auxiliary (e means être) -->

<verbs>
  <verb in="aller" tn="go" ay="e" mo="9" />
  <verb in="amorcer" tn="start,prime,bait" mo="1-2A" />
  <verb in="appeler" tn="call" mo="1-3A" />
  <verb in="arriver" tn="arrive" ay="e" mo="1-1" />
  <verb in="avoir" tn="have" mo="8" />
  <verb in="colorer" tn="color" mo="1-1" />
  <verb in="couvrir" tn="cover" mo="3-1" />
  <verb in="être" tn="be" mo="7" />
  <verb in="finir" tn="finish" mo="2-1" />
  <verb in="lancer" tn="throw" mo="1-2A" />
  <verb in="offrir" tn="offer" mo="3-1" />
  <verb in="ouvrir" tn="open" mo="3-1" />
  <verb in="parler" tn="speak" mo="1-1" />
  <verb in="souffrir" tn="souffrir" mo="3-1" />
</verbs>
